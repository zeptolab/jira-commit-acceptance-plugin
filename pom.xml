<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>com.atlassian.jira.plugins</groupId>
        <artifactId>jira-plugin-base</artifactId>
        <version>4</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.atlassian.jira.ext</groupId>
    <artifactId>commitacceptance</artifactId>
    <version>1.4-SNAPSHOT</version>

    <name>JIRA Commit Acceptance Plugin</name>
    <packaging>jar</packaging>


    <description>
        This plug-in lets you define certain basic rules that will determine whether a commit to your version control
        system will be accepted based on the issues in JIRA.
        For example, you can define a rule that no commit will be accepted unless it contains a valid issue key.
        Or you can set a rule that no commit would be accepted if the issue was not in an &quot;open&quot; state.
    </description>
    <url>http://confluence.atlassian.com/display/JIRAEXT/Commit+Acceptance+Plugin</url>

    <developers>
        <developer>
            <id>fkiss</id>
            <name>Ferenc Kiss</name>
            <email>ferenc.kiss@midori.hu</email>
        </developer>
        <developer>
            <name>Bernie Davison</name>
        </developer>
        <developer>
            <id>prkolbus</id>
            <name>Peter Kolbus</name>
            <email>peter.kolbus@gmail.com</email>
        </developer>
    </developers>


    <scm>
        <connection>scm:svn:https://svn.atlassian.com/svn/public/contrib/jira/jira-commitacceptance-plugin/trunk/
        </connection>
        <developerConnection>
            scm:svn:https://svn.atlassian.com/svn/public/contrib/jira/jira-commitacceptance-plugin/trunk/
        </developerConnection>
        <url>https://svn.atlassian.com/svn/public/contrib/jira/jira-commitacceptance-plugin/trunk/</url>
    </scm>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>atlassian-plugin.xml</include>
                    <include>client/perl/svn/*.*</include>
                    <include>client/python/svn/*.*</include>
                    <include>client/perl/cvs/*</include>
                    <include>client/python/cvs/*</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <includes>
                    <include>**/*.*</include>
                </includes>
                <excludes>
                    <exclude>atlassian-plugin.xml</exclude>
                    <exclude>client/perl/svn/*.*</exclude>
                    <exclude>client/python/svn/*.*</exclude>
                    <exclude>client/perl/cvs/*</exclude>
                    <exclude>client/python/cvs/*</exclude>
                </excludes>
            </resource>
        </resources>

        <filters>
            <filter>src/main/filters/${filter.name}</filter>
        </filters>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>perl-xmlrpc-test.pl</include>
                    <include>test-configuration.properties</include>
                </includes>
            </testResource>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>false</filtering>
                <includes>
                    <include>**/*</include>
                </includes>
                <excludes>
                    <exclude>perl-xmlrpc-test.pl</exclude>
                    <exclude>test-configuration.properties</exclude>
                </excludes>
            </testResource>
        </testResources>


        <!--
              The following plugin definitions are required to invoke functions that
              build run-time environment for running integration tests against JIRA
          -->
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.4</version>
            </plugin>

            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <!-- Creates the client scripts zip -->
                        <id>create-client-scripts</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <zip destfile="${project.build.directory}/jira-commitacceptance-plugin-${project.version}-client-scripts.zip"
                                     basedir="${project.build.directory}/classes/client"/>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.cargo</groupId>
                <artifactId>cargo-maven2-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>com.atlassian.maven.plugins</groupId>
                <artifactId>maven-clover-plugin</artifactId>
                <configuration>
                    <targetPercentage>50%</targetPercentage>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>plugin-debug</id>
            <build>
                <defaultGoal>verify</defaultGoal>
            </build>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <http.port>8080</http.port>
                <rmi.port>9001</rmi.port>
                <maven.test.skip>true</maven.test.skip>
                <cargo.wait>true</cargo.wait>
                <jvmargs>-Xmn128mb -Xmx256mb -Xdebug -Xnoagent -Djava.compiler=NONE
                    -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=5005
                </jvmargs>
                <jira.config.directory>plugin-debug</jira.config.directory>
                <unpack.jira.config.overwrite>false</unpack.jira.config.overwrite>
            </properties>
        </profile>

        <profile>
            <id>ci-bdac</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <jira.version>3.12</jira.version>
                <filter.name>bdac.properties</filter.name>
                <http.port>1990</http.port>
            </properties>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>jmock</groupId>
            <artifactId>jmock</artifactId>
            <version>1.2.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>jmock</groupId>
            <artifactId>jmock-cglib</artifactId>
            <version>1.2.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>cglib</groupId>
            <artifactId>cglib-nodep</artifactId>
            <version>2.1_3</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.tmatesoft</groupId>
            <artifactId>svnkit</artifactId>
            <version>1.1.2</version>
            <scope>test</scope>
        </dependency>
        <!-- 
        <dependency>
            <groupId>ch.ethz.ganymed</groupId>
            <artifactId>ganymed-ssh2</artifactId>
            <version>build209</version>
            <scope>test</scope>
        </dependency>
        -->
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>1.2</version>
            <scope>test</scope>
        </dependency>
        
        
        
    </dependencies>

    <repositories>
        <repository>
            <id>custom</id>
            <name>custom-m1-repository</name>
            <url>file://${basedir}/lib/</url>
            <layout>legacy</layout>

            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>atlassian-contrib</id>
            <name>Atlassian repository of contributed code</name>
            <url>dav:https://maven.atlassian.com/contrib</url>
        </repository>
        <snapshotRepository>
            <id>atlassian-contrib-snapshot</id>
            <name>Atlassian repository of contributed code snapshots</name>
            <url>dav:https://maven.atlassian.com/contrib-snapshot</url>
        </snapshotRepository>
    </distributionManagement>


    <properties>
        <jira.version>3.12</jira.version>
        <filter.name>default.properties</filter.name>
    </properties>

</project>
