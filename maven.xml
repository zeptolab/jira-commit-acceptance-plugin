<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:j="jelly:core" xmlns:maven="jelly:maven" xmlns:ant="jelly:ant" xmlns:u="jelly:util">
    <preGoal name="dist:build-bin">
        <copy todir="${maven.dist.bin.assembly.dir}">
            <fileset dir="doc" includes="*.*"/>
        </copy>
        <copy todir="${maven.dist.bin.assembly.dir}/client">
            <fileset dir="src/client" includes="**/*"/>
        </copy>
    </preGoal>
    <preGoal name="dist:build-src">
        <copy todir="${maven.dist.src.assembly.dir}/doc">
            <fileset dir="doc" includes="**/*"/>
        </copy>
    </preGoal>
</project>
