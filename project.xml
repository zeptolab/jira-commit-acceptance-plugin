<?xml version='1.0' encoding='ISO-8859-1'?>
<project>
  <pomVersion>3</pomVersion>
  <id>jira-commitacceptance-plugin</id>
  <name>${project.name}</name>
  <currentVersion>${project.version}</currentVersion>

  <organization>
    <name>Midori</name>
    <url>http://www.midori.hu</url>
  </organization>

  <inceptionYear>2006</inceptionYear>
  <package>com.atlassian.jira.ext.commitacceptance</package>
  <description>JIRA Commit Acceptance plugin.</description>

  <developers>
    <developer>
      <name>Ferenc Kiss</name>
      <id>feco</id>
      <email>ferenc.kiss@midori.hu</email>
      <organization>Midori</organization>
      <roles>
        <role>Developer</role>
      </roles>
    </developer>
    <developer>
      <name>Istvan Vamosi</name>
      <id>pisti</id>
      <email>istvan.vamosi@midori.hu</email>
      <organization>Midori</organization>
      <roles>
        <role>Developer</role>
      </roles>
    </developer>
  </developers>

  <dependencies>
    <!-- Atlassian source dependencies -->
    <dependency>
      <id>atlassian-core</id>
      <version>2.5.2</version>
    </dependency>
    <dependency>
      <id>atlassian-jira</id>
      <version>3.6</version>
    </dependency>
    <dependency>
      <id>ofbcore+entity</id>
      <version>2.1.1-atlassian-20Dec05</version>
    </dependency>
    <!-- Jakarta dependencies -->
    <dependency>
      <id>commons-collections</id>
      <version>3.1</version>
    </dependency>
    <dependency>
      <id>commons-lang</id>
      <version>2.1</version>
    </dependency>
    <!-- OS dependencies -->
    <dependency>
      <id>osuser</id>
      <version>1.0-dev-log4j-1.4jdk-7Dec05</version>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <resources>
      <resource>
        <directory>src/etc/</directory>
        <include>atlassian-plugin.xml</include>
        <include>**/*.vm</include>
      </resource>
    </resources>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
        <include>**/Test*.java</include>
      </includes>
    </unitTest>
  </build>

</project>
